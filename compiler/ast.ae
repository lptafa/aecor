    exprs: &Vector    // Vector<&AST>
}

struct FuncCall {
    callee: &AST
    args: &Vector    // Vector<&AST>
    func: &Function
    added_method_arg: bool
}

struct Member {
    lhs: &AST
    name: string
    is_method: bool
    is_pointer: bool
}

struct EnumValue {
    struct_def: &Structure
    name: string
}

struct VarDeclaration {
    var: &Variable
